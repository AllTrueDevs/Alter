.navbar.navbar-default.navbar-static-top
  .container
    = link_to 'Alter', root_path, class: 'navbar-brand'
    %ul.nav.navbar-nav.navbar-right
      - unless user_signed_in?
        %li
          = link_to 'Головна', root_path
        %li
          = link_to 'Реєстрація', new_user_registration_path
        %li
          = link_to 'Вхід', new_user_session_path
      - else
        .top-user-name
          .btn-group
            = link_to current_user.name, user_path(current_user), class: 'btn btn-default'
            %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
              %span.caret
              %span.sr-only Toggle Dropdown
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to 'Створити запит', new_request_path
              %li
                = link_to 'Запити', requests_path
              %li
                = link_to @notifications_row, notifications_path
              %li
                = link_to @decisions_row, decisions_path
              %li
                = link_to 'Користувачі', users_path
              %li
                = link_to 'Налаштування', edit_user_registration_path
              %li.divider
              %li
                = link_to 'Вийти', destroy_user_session_path, :method => :delete
