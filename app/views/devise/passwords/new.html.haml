.panel.panel-default
  .panel-heading
    %h4= t('.forgot_your_password', :default => 'Забули свій пароль?')
  .panel-body
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form' }) do |f|
      = devise_error_messages!
      .form-group
        = f.label :email
        = f.email_field :email, autofocus: true, class: 'form-control'
      = f.submit t('.send_me_reset_password_instructions', :default => 'Надіслати інтсрукції зміни пароля'), class: 'btn btn-success'
    = render "devise/shared/links"

