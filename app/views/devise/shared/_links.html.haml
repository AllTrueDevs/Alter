.links
  - if devise_mapping.registerable? && controller_name != 'registrations'
    .social-networks
      = link_to user_omniauth_authorize_path(:vkontakte, login: true) do
        %i.fa.fa-vk
      = link_to user_omniauth_authorize_path(:facebook, login: true) do
        %i.fa.fa-facebook
      = link_to user_omniauth_authorize_path(:twitter, login: true) do
        %i.fa.fa-twitter
  - if controller_name != 'sessions'
    = link_to 'Авторизація', new_session_path(resource_name)
    %br/
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to 'Реєстрація', new_registration_path(resource_name)
    %br/
  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to 'Забули свій пароль?', new_password_path(resource_name)
    %br/
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to 'Не отримали інструкції підтвердження?', new_confirmation_path(resource_name)
    %br/
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = link_to 'Не отримали інструкції розблокування?', new_unlock_path(resource_name)
    %br/
