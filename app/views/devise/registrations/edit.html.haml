%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f|
  = devise_error_messages!
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field
    = label_tag 'Email:'
    %br/
    = text_field_tag nil, current_user.email, {:readonly => true}
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :info
    %br/
    = f.text_area :info
  .field
    = f.label :phone
    %br/
    = f.phone_field :phone
  .field
    = f.label :skype
    %br/
    = f.text_field :skype
  -#.field
  -#  = label_tag :facebook
  -#  %br/
  -#  = text_field_tag :facebook, current_user.contacts.split('|')[2]
  -#.field
  -#  = label_tag :vk
  -#  %br/
  -#  = text_field_tag :vk, current_user.contacts.split('|')[3]
  .field
    = f.label :avatar
    %br/
    = f.file_field :avatar, accept: 'image/png, image/jpeg'
  .actions
    = f.submit 'Обновити профіль'

= link_to 'Повернутись до профіля', :back
