= content_for :title, 'Надіслати інструкції підтвердження'
= content_for :styles do
  = stylesheet_link_tag 'login_signup'

.group-form
  = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, role: 'form' }) do |f|
    = f.email_field :email, autofocus: true, placeholder: 'Поштова скринька', class: 'custom-input'
    = f.submit 'Надіслати', class: 'button', data: {disable_with: 'Обробка...'}
    = render 'devise/shared/links'

