= content_for :title, 'Вхід'
= content_for :javascript do
  = javascript_include_tag 'user-forms'
= content_for :styles do
  = stylesheet_link_tag 'login_signup'

.group-form
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f|
    = f.email_field :email, autofocus: true, placeholder: 'Поштова скринька', class: (alert.nil?) ? 'custom-input' : 'custom-input error'
    = f.password_field :password, autocomplete: 'off', placeholder: 'Пароль', class: (alert.nil?) ? 'custom-input' : 'custom-input error'
    - if devise_mapping.rememberable?
      .custom-checkbox
        = f.check_box :remember_me
        = f.label :remember_me
    = f.submit  'Увійти', class: 'button', data: { disable_with: 'Обробка...' }
  = render 'devise/shared/links'
