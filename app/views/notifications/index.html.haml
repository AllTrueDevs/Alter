.panel.panel-default.width-100
  .panel-heading
    .row
      .col-md-10
        %h4 Сповіщення
      .col-md-2
        .pull-right
          = link_to controller: :notifications, action: :clean do
            %span.glyphicon.glyphicon-trash{"aria-hidden" => "true"}
  .panel-body
    %div{ class: 'notifications'}
      -if @notifications.empty?
        %h5.text-center Сповіщень не знайдено
      -else
        .notifications
          = render partial: 'notifications/notifications_list', locals: { notifications: @notifications }
