.notification{id: "notification-#{notification.id}"}
  .row
    .col-md-1
      - if notification.status.eql?('new') && destination.eql?('notification')
        = link_to notification_url(notification), remote: true do
          %span.fa-5x.circle-icon.new{ class: activity_icon(notification) }
      - else
        %span.fa-5x.circle-icon{ class: activity_icon(notification) }
    .col-md-11
      .body
        %h1.title= send("#{destination}_activity_message_text", notification).html_safe
        .info
          %p.date= time_ago_in_words(notification.created_at) + ' тому.'
