= include_gon
= content_for :javascript do
  = javascript_include_tag 'articles'

- if article.errors.any?
  #error_explanation
    %h2= "#{pluralize(article.errors.count, "error")} prohibited this article from being saved:"
    %ul
      - article.errors.full_messages.each do |msg|
        %li= msg

= form_for article, html: { multipart: true, role: :form } do |f|
  .form-group
    = f.label :Назва
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :Опис
    = f.text_area :body, autofocus: true, class: 'form-control', rows: '5'
  .form-group
    = f.label :Джерело
    = f.text_field :src, class: 'form-control'
  .form-group
    = f.label :Теги
    = f.text_field :tag_list, value: article.tags.pluck(:name).join(','), class: 'tags-field'
  .form-group
    = f.label :Фото
    .file-field-container
      = f.file_field :photo, accept: 'image/png, image/jpeg'
  = f.submit 'Опублікувати', class: 'btn btn-success', data: { disable_with: 'Обробка...' }