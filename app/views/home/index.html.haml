-if user_signed_in?
  = image_tag current_user.avatar.url
  %p= 'Hello, ' + current_user.name + '. You are ' + current_user.role
  -unless current_user.contacts.split('|')[0].to_s.length == 0
    %p= 'phone: ' + current_user.contacts.split('|')[0]
  -unless current_user.contacts.split('|')[1].to_s.length == 0
    %p= 'skype: ' + current_user.contacts.split('|')[1]
  -unless current_user.contacts.split('|')[2].to_s.length == 0
    %p= 'facebook: ' + current_user.contacts.split('|')[2]
  -unless current_user.contacts.split('|')[3].to_s.length == 0
    %p= 'vk: ' + current_user.contacts.split('|')[3]
  = link_to 'Створити запит', new_request_path
  = link_to 'Запити', requests_path
  = link_to 'Редагувати профіль', edit_user_registration_path
  = link_to 'Вийти', destroy_user_session_path, :method => :delete
-else
  = link_to 'Зареєструватись', new_user_registration_path
  = link_to 'Ввійти', new_user_session_path