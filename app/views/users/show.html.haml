= content_for :plugins do
  = javascript_include_tag 'user_tabs'
.panel.panel-default.width-100
  .panel-body
    .row.user-profile
      .col-md-4.col-md-offset-1.text-right.user-avatar= image_tag @user.avatar.url, class: 'img-thumbnail'
      .col-md-6.user-info
        %h3.inline= @user.name
        -if (can? :ban_users, @user) && (current_user != @user)
          -if @user.role == 'banned'
            = link_to ban_path, :data => { :confirm => 'Розблокувати користувача?' }, class: 'inline' do
              %span.glyphicon.glyphicon-check{"aria-hidden" => "true"}
          -else
            = link_to ban_path, :data => { :confirm => 'Заблокувати користувача?' }, class: 'inline' do
              %span.glyphicon.glyphicon-ban-circle{"aria-hidden" => "true"}
        -if (can? :make_moderators, @user) && (current_user != @user)
          -if @user.role == 'moderator'
            = link_to moder_path, :data => { :confirm => 'Забрати права модератора?' }, class: 'inline' do
              %span.glyphicon.glyphicon-user{"aria-hidden" => "true"}
          -else
            = link_to moder_path, :data => { :confirm => 'Зробити модератором?' }, class: 'inline' do
              %span.glyphicon.glyphicon-briefcase{"aria-hidden" => "true"}
        -case @user.role
          -when 'moderator'
            %h5
              %small.text-warning Модератор
          -when 'banned'
            %h5
              %small.text-danger Заблокований
        %br
        -if @user.info.to_s.length > 0
          %p= @user.info
        -if @user.phone.to_s.length > 0
          %p
            %strong Телефон:
            = @user.phone
        -if @user.skype.to_s.length > 0
          %p
            %strong Skype:
            = @user.skype
    .user-requests
      %ul.nav.nav-tabs
        %li.active
          = link_to 'Активні запити', user_actual_requests_path, :remote => true
        %li= link_to 'Завершені запити', user_archived_requests_path, :remote => true
        - unless @user.helped_items.size.zero?
          %li= link_to 'Cтатистика', user_statistic_path, :remote => true
      .tab-content
        .tab-pane.active
          = render'requests/requests_list', requests: @actual_requests

:javascript
  $('.nav-tabs a').click(function (e) {
    $('ul.nav-tabs li.active').removeClass('active')
    $(this).parent('li').addClass('active')
  })


