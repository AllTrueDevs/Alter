= content_for :title, 'Користувачі'
.panel.panel-default.width-100
  .panel-heading
    .width-100
      .row.form-header
        %h4.inline Користувачі
        .pull-right
          = form_tag(search_users_url, method: :get, id: 'search-form', remote: true) do
            .input-append
              = text_field_tag :search, params[:search], class: 'form-control search-field inline', placeholder: 'Введіть ім\'я користувача'
              %button.inline.btn.btn-success{ type: :submit } Знайти
            .all-filter
              = link_to search_users_url(@users), 'data-placement': :bottom, title: 'Показати усіх користувачів', remote: true do
                %span.glyphicon.glyphicon-filter{ 'aria-hidden': true }
  .panel-body
    .users-list
      = render partial: 'users_list', locals: { users: @user }
