%h1 Listing categories

%table
  %thead
    %tr
      %th Name
      %th
      %th

  %tbody
    - @categories.each do |category|
      %tr
        %td= category.name
        %td= link_to 'Destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= form_for Category.new do |f|
  .field
    = f.label :name
    = f.text_field :name



  .actions
    = f.submit 'Save'
