%h1.title= defined?(in_list) ? link_to(request.name, request) : request.name
.info
  %p.author= link_to request.user.name, request.user
  %p.date= l(request.created_at, format: '%d %B, %Y')
  -#%span.views.fa.fa-eye 465(count of views here)
  = render partial: 'requests/request_actions', locals: { request: request }
%br
- if defined?(in_list)
  %p.description= request.description.truncate(530, separator:' ')
-else
  = simple_format(request.description, class: 'description')
.goals
  - request.required_items.each do |required_item|
    .progress-title
      %p= "#{required_item.category.name}: "
      %small= "#{required_item.current_count} ли #{required_item.goal_count}"
    .progress
      .progress-bar.active{data: {value: required_item.progress}, style: "background: ##{required_item.category.color}" }
        .percents.hidden
          %p{style: "color: #{required_item.font_color}"}= "#{required_item.progress}%"
