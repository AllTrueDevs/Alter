.row.request-in-list
  .col-md-2= image_tag request.photo.url, class: 'img-rounded img-responsive'
  .col-md-10
    .row
      .col-md-11
        %h4= request.name
        %h4
          %small= time_ago_in_words(request.created_at)+ ' ago.'
      .col-md-1
    .row
      .col-md-12
        %p= request.description
        .row
          .col-md-2
            .pull-left
              %p.show
                = link_to 'Детальніше »', request if can? :read, @user.requests.first
          .col-md-10
            .pull-right
              - request.required_items.each do |required_item|
                %span.label.label-default= Category.find(required_item.category_id).name
%hr